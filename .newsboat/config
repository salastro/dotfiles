# external browser
macro m set browser "setsid mpv %u &"; open-in-browser ; set browser "brave %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key g
unbind-key G

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key g home
bind-key G end
bind-key u pageup
bind-key d pagedown
bind-key s sort
bind-key S rev-sort

