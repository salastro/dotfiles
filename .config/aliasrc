src() {
	cd ~/.srcpkgs && 
	echo "\e[1;31mcd $(pwd)" &&
	echo "\e[1;31mgit clone $(xclip -o -selection clipboard)\e[0m" &&
	git clone $(xclip -o -selection clipboard) && 
	cd "$(basename $(xclip -o -selection clipboard) .git)" &&
	echo "\e[1;31mcd $(pwd)"
}

