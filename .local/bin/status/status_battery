#!/bin/sh

battery="/sys/class/power_supply/BAT1"

capacity="$(cat "$battery/capacity")"

status=$(cat "$battery/status")

case "$status" in
        "Full") status="#" ;;
        "Discharging") status="-" ;;
        "Charging") status="+" ;;
        "Not charging") status="=" ;;
        "Unknown") status="?" ;;
	*) status="ðŸ”Œ" ;;
esac

[ "$status" = "-" ] && [ "$capacity" -le 35 ] && warn=" ^c#ff0000^_LOW BATTERY__^d^"

printf "%s%s%s" $capacity $status $warn;unset warn
