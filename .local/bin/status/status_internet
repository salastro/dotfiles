#!/bin/sh 

# [ "$(cat /sys/class/net/w*/operstate)" = 'down' ] && wifiicon="" || printf " $(iwgetid -r) " 
# [ ! -n "${wifiicon+var}" ] && wifiicon=$(grep "^\s*w" /proc/net/wireless | awk '{ print int($3 * 100 / 70) "%" }')

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="" ;;
	up)   wifiicon=" ï‡« $(iwgetid -r) $(awk '/^\s*w/ { print int($3 * 100 / 70) "%" }' /proc/net/wireless)" ;;
esac

case "$(cat /sys/class/net/enp0s20f0u*/operstate 2>/dev/null)" in
	down)    usbicon="" ;;
	up)      usbicon=" ïŠ‡" ;;
	unknown) usbicon=" ïŠ‡?" ;;
esac

case "$(cat /sys/class/net/eno1/operstate 2>/dev/null)" in
	down) ethicon="" ;;
	up)   ethicon=" ðŸ”Œ" ;;
esac

[ -e /tmp/create_ap.wlo1.conf.* ] && hotspot=" H"

[ "$wifiicon" = "" ] || stateicon="[ðŸ“¡"
[ "$usbicon" = "" ] ||  stateicon="[ðŸ“¡"
[ "$ethicon" = "" ] ||  stateicon="[ðŸ“¡"
[ "$hotspot" = "" ] ||  stateicon="[ðŸ“¡"

printf "%s%s%s%s%s" "$stateicon" "$wifiicon" "$usbicon" "$ethicon" "$hotspot"
